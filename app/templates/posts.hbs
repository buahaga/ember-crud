{{posts-controls isList=isList sort=sortQuery filter=filterQuery toggle=(action "toggleView")}}

{{#each posts as |post|}}
  {{post-item isList=isList post=post update=(action "updatePost") remove=(action "removePost")}}
{{/each}}

{{#if showPostForm}}
  {{post-new-item publish=(action "publishPost") close=(action "toggleForm")}}
{{else}}
  {{create-button show=(action "toggleForm")}}
{{/if}}
