<article class="post-item">
  {{#if editable}}
    <div class="post-header">
      {{ input class="edit-header" value=editTitle }}
      <div class="post-controls">
        <button class="post-update" {{action "update" post}}>&#10004;</button>
      </div>
    </div>
    {{ textarea class="edit-body" value=editBody }}
  {{else}}
    <div class="post-header">
      <h3>{{post.title}}</h3>
      <div class="post-controls">
        <button class="post-edit" {{action "edit" post}}>&#9998;</button>
        <button class="post-remove" {{action "remove" post}}>&#10007;</button>
      </div>
    </div>
    <p>{{post.body}}</p>
  {{/if}}
</article>
